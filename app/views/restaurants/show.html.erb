<div class="show-main-container">
  <div class="show-banner" style="background-image: url(<%= cl_image_path @restaurant.photo.key, height: 300, width: 400, crop: :fill if @restaurant.photo.attached? %>)">
    <h1 class="rest-name-show"><%= @restaurant.name %></h1>
  </div>
  <div class="container">
    <div class="card-trip">
      <div class="card-trip-infos">
  
        <div class="top-info">
          <p><%= @restaurant.price %></p>
          <h2 class= "restaurant-category"><%= @restaurant.category %></h2>
          <h2 class="card-trip-pricing"><i class="fas fa-star star"></i><%= @restaurant.rating %></h2>
        </div>
        <h2>Address: <%= @restaurant.address %></h2>
        </div class="top-info">
        <div class="available">
          <% if @restaurant.adaptability %>
            <p class="red">This restaurant will <strong>Not</strong> change ingredients.</p>
          <% else %>
            <p class="green">This restaurant <strong>Can</strong> make changes on your ingredients. </p>
          <% end %>
        </div>

        <div class="d-flex p-2 bd-highlight">
          <p><strong><%= @restaurant.start_time %>:00 PM - <%= @restaurant.end_time %>:00 MD</strong></p>
        </div>    
        <div >
            <% if @restaurant.wifi %>
              <img id="icon" src="https://img.icons8.com/windows/32/000000/wifi--v2.png"/>
            <% else %>
              <img id="icon" src="https://img.icons8.com/plumpy/24/000000/without-internet.png"/>
            <% end %>
            <% if @restaurant.terrace %>
              <img src="https://cdn-icons-png.flaticon.com/512/358/358824.png"/>
            <% else %>
              <img id="icon" src="https://cdn-icons-png.flaticon.com/512/358/358824.png"/>
            <% end %>
        </div>
          </div>
        <button class="btn" id="phone">Contact the restaurant</button>
       </div>

    <div>
    <h2> This are the dishes you con eat! </h2>
    </div>
    <% @dishes.each do |dish| %>
      <div class="card-product">
        <img src="https://images.unsplash.com/photo-1610300034180-d55d519ca946?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=837&q=80" />
        <div class="card-product-infos">
          <h2><%= dish.name%></h2>
          <% dish.ingredients.each do |ingredient| %>
            <%= ingredient.name  %>
          <% end %>
        </div>
      </div>
      <% end %>
  
  </div>
