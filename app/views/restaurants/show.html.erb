<div class="show-main-container">
    <div class="show-banner" style="background-image: url(<%= cl_image_path @restaurant.photo.key, height: 300, width: 400, crop: :fill if @restaurant.photo.attached? %>)">
      <h1 class="rest-name-show"><%= @restaurant.name %></h1>
    </div>
  <div class="container">
    <div class="card-trip">
      <div class="card-trip-infos">
        <div>
            <p class = "restaurant-category"><strong><%= @restaurant.category %></p>
            <p>Rating: <%= @restaurant.rating %></p>
            <p>Phone: <%= @restaurant.telephone %></p>
             <p>Address: <%= @restaurant.address %></p>
            <% if @restaurant.adaptability %>
            <p> Will not change ingredients.</p>
            <% else %>
            <p> Will change ingredients. </p>
            <% end %>
            <% if @restaurant.wifi %>
            <%= @restaurant.wifi %><i class="fa fa-wifi" aria-hidden="true"></i>
            <% else %>
            <%= @restaurant.wifi %><img src="https://img.icons8.com/plumpy/24/000000/without-internet.png"/>
            <% end %>
            <div class="d-flex p-2 bd-highlight">
            <p><%= @restaurant.start_time %>:00 PM </p> -- <p><%= @restaurant.end_time %>:00 MD</p>
            </div>
          </div>
       </div>
     <!--  Here the code for dishes list for a given restaurant-->
<% @dishes.each do |dish| %>
  <div class="card-product">
    <img src="https://images.unsplash.com/photo-1610300034180-d55d519ca946?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=837&q=80" />
    <div class="card-product-infos">
      <h2><%= dish.name%></h2>
      <% dish.ingredients.each do |ingredient| %>
          <%= ingredient.name  %>
          <% end %>
    </div>
  </div>

<% end %>

    </div>
  </div>

</div>

