<%= simple_form_for :search, url: "/restaurants", method: "GET" do |f| %>
  <%= f.input :ingredients, label: "restaurant",  collection: Ingredient.all, as: :check_boxes, include_hidden:false, include_blank: false%>
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>

 <% if @restaurants %>
  <% @restaurants.each do |restaurant| %>
  <div class="card-trip">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
  <div class="card-trip-infos">
    <div>
      <h2><%= restaurant.name %></h2>
      <p>Short description here!</p>
    </div>
    <h2 class="card-trip-pricing">5</h2>
  </div>
</div>
    <% end %>
<% end %>

<div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
